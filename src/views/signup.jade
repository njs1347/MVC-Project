extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
     .logo
        h1 Build-A-Bear
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#signup
    form#signupForm(class="mainForm", name="signupForm", action="/signup", method="POST")
      label(for="username") Username: 
      input#username(type="text", name="username", placeholder="username")
      label(for="password") Password: 
      input#password(type="password", name="password", placeholder="password")
      label(for="password2") Password: 
      input#password2(type="password", name="password2", placeholder="retype password")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#signupSubmit(class="formSubmit", href="#") Sign up
block scripts
        script(src="/assets/client.js")